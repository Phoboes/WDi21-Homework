<h1><%= @engineer.name %></h1>
<div class="pure-g">
  <div class="pure-u-1-2 pure-u-md-1-3">
    <%= image_tag(@engineer.image) %>
  </div>
  <div class="pure-u-1-2 pure-u-md-1-1">
    <p><%= @engineer.bio %></p>
  </div>
</div>




<div class="booking">
<% if @current_user %>
  <%= link_to("Make a booking", "/bookings/new") %>
  <% if @current_user.id == @engineer.user_id %>
    <h2>Upcoming recording sessions</h2>
    <%  @engineer.bookings.each do |i|%>
      <p>You are recording <%= i.artist.name %> on <%= i.appointment_time.strftime("%b %d, %Y at %I:%M %P") %></p>
      <div class="controls">
        <%= link_to("Edit this booking", "/bookings/#{i.id}/edit") %>
        <%= link_to("Delete this booking", "/bookings/#{i.id}", method: :delete, data: { confirm: "Are you sure?"}) %>
      </div>
    <% end %>
  <% end %>
<% end %>
</div>
