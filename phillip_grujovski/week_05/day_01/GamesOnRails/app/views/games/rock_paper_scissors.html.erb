<h2>Rock Paper Scissors</h2>

<h4>Throw either a rock, scissors or paper!</h4>
<%= form_tag("/games/rock_paper_scissors", method: "get") do %>
  <%= text_field_tag(:throw, params[:throw]) %>
  <%= submit_tag("Throw!", class: "submit-btn") %>
<% end %>

<% if(@user_throw != '') %>
    <% if(@options.include?(@user_throw)) %>
      <p>You threw: <%= @user_throw %></p>
      <p>The computer threw: <%= @computer_throw %></p>
      <p><%= @winner %></p>
      <% else %>
        <p>Invalid input, try again!</p>
    <% end %>
<% end %>