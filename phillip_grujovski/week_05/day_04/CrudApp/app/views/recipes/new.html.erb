<h1>Create a Recipe</h1>

<div class="create-form">
  <%= form_for @recipe do |f| %>
      <div class="form-group">
        <%= f.label :title %>:
        <%= f.text_field :title, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Ingredients (comma seperated):" %>
        <%= f.text_field :ingredients, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :chef_id %>:
        <%= f.collection_select(:chef_id, Chef.all, :id, :name, class: "form-control") %>
      </div>
      <%= f.submit("Add Recipe", class: "btn btn-success") %>
  <% end %>
</div>
