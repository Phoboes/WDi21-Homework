<h1>Edit <%= @chef.name %></h1>

<div class="edit-form">
  <%= form_for @chef do |f| %>
      <div class="form-group">
        <%= f.label :name %>:
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :nationality %>:
        <%= f.text_field :nationality, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :dob %>:
        <%= f.text_field :dob, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :image %>:
        <%= f.url_field :image, class: "form-control" %>
      </div>
      <%= f.submit("Update Chef", class: "btn btn-success") %>
  <% end %>
</div>
