<h3 class="center-align">Login</h3>

<% if flash[:login_error] %>
  <p>
    <%= flash[:login_error] %>
  </p>
<% end %>

<%= form_tag "/login" do %>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <a class="waves-effect waves-dark btn"><%= submit_tag "Login" %></a>
  <a href="/users/new" class="waves-effect waves-light btn"><%=submit_tag "Back" %></a>
<% end %>
