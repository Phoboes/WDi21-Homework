<h1>Signup</h1>

<% if flash[:login_error]  %>
<p>
<%= flash[:login_error] %>
</p>
<% end  %>

<%= form_tag '/login' do %>

<p>
<%= label_tag :firstname %>
<%= text_field_tag :firstname %>
</p>

<p>
<%= label_tag :lastname %>
<%= text_field_tag :lastname %>
</p>

<p>
<%= label_tag :email %>
<%= email_field_tag :email %>
</p>

<p>
<%= label_tag :password %>
<%= password_field_tag :password %>
</p>

<%= submit_tag "Login" %>
<% end  %>
